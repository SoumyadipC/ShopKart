<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="login-form">
    <h2 class="text-center">Member Login</h2>
    <div class="container">
       <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control input-lg', placeholder: "email" %>
      </div>
      
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control input-lg', placeholder: "password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
         
    <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>

<style type="text/css">
	body {
		color: #4e4e4e;
		background: #e2e2e2;
    font-family: 'Roboto', sans-serif;
    text-align: center;
  }
  
  .container {
    background-color: #19232d;
  }

  label {
    color: aliceblue;
  }

  input {
    width: 80%;
    margin-top: 5%;
    margin-bottom: 5%;
  }
  .form-control {
		background: #f2f2f2;
    font-size: 16px;
		border-color: transparent;
		box-shadow: none !important;
	}
	.form-control:focus {
		border-color: #91d5a8;
        background: #e9f5ee;
	}
    .form-control, .btn {        
        border-radius: 2px;
    }
	.login-form {
		width: 380px;
		margin: 0 auto;
	}
    .login-form h2 {
        margin: 0;
        padding: 30px 0;
        font-size: 34px;
    }
  .login-form a {
		color: #4aba70;
	}	
	.login-form a:hover {
